@model EventReservation.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Register";
}
<link href="~/Css/login-form.css" rel="stylesheet" />
<style>
    footer {
        visibility: collapse;
    }

    nav {
        visibility: collapse;
    }
</style>
<section>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Register</h5>
                             @Html.ValidationSummary("", new { @class = "text-danger" })
                            <form class="form-signin">
                                <div class="form-label-group">
                                    <input type="email" id="inputEmail" class="form-control" placeholder="Email" name="email" required autofocus>
                                </div>
                                <div class="form-label-group">
                                    <input type="password" id="inputPass" class="form-control" placeholder="Password" name="password" required autofocus>
                                </div>
                                <div class="form-label-group">
                                    <input type="password" id="confirmPass" class="form-control" placeholder="Confirm password" name="password" required autofocus>
                                </div>
                               
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create account</button>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
