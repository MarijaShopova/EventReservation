@model EventReservation.Models.Local

@{
    ViewBag.Title = "Details ";
}

<link href="~/Css/main-page.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript" src="~/Scripts/counter.js"></script>
<script src="~/Scripts/caroules.js"></script>
<link href="~/Css/back-to-top-button.css" rel="stylesheet" />
<link href="~/Css/showgallery.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/galleryscript.js"></script>
<style>
    li {
        list-style-type: none;
    }

    a {
        text-decoration: none;
    }

    div.event {
        color: #004E64;
        font-weight: bold;
        font-size: 30px;
    }

    dt {
        color: #004E64;
        margin-bottom: 10px;
    }

    dd {
        color: #004E64;
    }

    .single {
        padding: 30px 15px;
        margin-top: 20px;
        background: #fcfcfc;
        border: 1px solid #f0f0f0;
        border-radius: 28px;
    }

        .single h3.side-title {
            margin-top: -20px;
            font-size: 40px;
            color: #004E64;
            text-transform: uppercase;
            font-weight: bold;
            font-family: ChunkFiveRegular;
        }

        .single h3.side-title1 {
            margin: 0;
            margin-bottom: 10px;
            padding: 0;
            font-size: 40px;
            color: #004E64;
            text-transform: uppercase;
            font-weight: bold;
            font-family: ChunkFiveRegular;
        }


        .single h3.side-title:after {
            content: '';
            width: 30%;
            height: 1.5px;
            background: #004E64;
            display: block;
            margin-top: 6px;
        }

        .single ul {
            margin-bottom: 0;
        }

        .single li a {
            color: #004E64;
            font-size: 14px;
            text-transform: uppercase;
            border-bottom: 1px solid #f0f0f0;
            line-height: 40px;
            display: block;
            text-decoration: none;
        }

            .single li a:hover {
                color: #004E64;
                text-decoration-color: #004E64;
                font-weight: bold;
            }

        .single li:last-child a {
            border-bottom: 0;
        }

    .btn a {
        color: #25A18E !important;
        text-decoration: none !important;
    }


    .btn-green {
        background-color: #004E64;
        color: #004E64 !important;
        box-shadow: 3px 7px 8px rgba(0,0,0,0.4), 0 4px 2px rgba(0,0,0,0.23)
    }
    


    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }

    .container1 {
        margin-top: 30px;
        padding-bottom: 30px;
    }

    .row1 {
        margin-top: 30px;
    }

    .localname {
        color: #004E64;
        font-size: 50px;
        font-weight: bold;
        font-family: ChunkFiveRegular;
        font-style: oblique;
        
    }

    .localnamedt {
        margin-top: 5px;
    }
    
</style>


<div class="container container1">

    <div class="row row1">
        <div class="col-7" style="border-top-left-radius: 28px; border-top-right-radius: 28px;border-bottom-left-radius: 28px; border-bottom-right-radius: 28px;">
            <div class="row">
                <div>
                    <div id="video-carousel-example" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner" role="listbox" style="border-top-left-radius: 15px; border-top-right-radius: 15px; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
                            <div class="carousel-item active">
                                <img src="~/Content/IT_sliki/lightSignCoctails.jpeg" style="height: 385px; width: 685px;">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/IT_sliki/bestParties.jpg" style="height: 385px; width: 685px;">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/IT_sliki/clubs.jpg" style="height: 385px; width: 685px;">
                            </div>
                        </div>

                        <a class="carousel-control-prev" href="#video-carousel-example" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#video-carousel-example" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row localname">
                <dt class="col localnamedt">
                     @Html.DisplayFor(model => model.Name)
                    
                </dt>
            </div>

            <div>
                <i class="fa fa-star" id="star1" onmouseover="changeColor(this)" onmouseleave="changeBackColor()" onclick="rate(this)" style="color: darkgray; cursor: pointer"></i>
                <i class="fa fa-star" id="star2" onmouseover="changeColor(this)" onmouseleave="changeBackColor()" onclick="rate(this)" style="color: darkgray; cursor: pointer"></i>
                <i class="fa fa-star" id="star3" onmouseover="changeColor(this)" onmouseleave="changeBackColor()" onclick="rate(this)" style="color: darkgray; cursor: pointer"></i>
                <i class="fa fa-star" id="star4" onmouseover="changeColor(this)" onmouseleave="changeBackColor()" onclick="rate(this)" style="color: darkgray; cursor: pointer"></i>
                <i class="fa fa-star" id="star5" onmouseover="changeColor(this)" onmouseleave="changeBackColor()" onclick="rate(this)" style="color: darkgray; cursor: pointer"></i>
            </div>

            <div style=" width: 700px; margin-top: 10px;">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <dt class="col" style="border-top: 1px solid #004E64; padding: 25px; margin-top: -10px; height: 50px; border-top-left-radius: 20px; border-top-right-radius: 20px;">
                                @Html.DisplayNameFor(model => model.Description):  @Html.DisplayFor(model => model.Description)
                            </dt>
                        </div>
                        <div class="row">
                            <dt class="col" style="border-top: 1px solid #004E64; padding: 25px; margin-top: -10px; height: 50px;">
                                Address:   @Html.DisplayFor(model => model.StreetName)  n.@Html.DisplayFor(model => model.StreetNo),
                                @Html.DisplayFor(model => model.City)
                            </dt>
                        </div>
                        <div class="row">
                            <dt class="col" style="border-top: 1px solid #004E64; border-bottom: 1px solid #004E64;  padding: 25px; margin-top: -10px; margin-bottom: 20px; height: 50px; border-bottom-left-radius: 20px; border-bottom-right-radius: 20px;">
                                @Html.DisplayNameFor(model => model.Parking):  @Html.DisplayFor(model => model.Parking)
                            </dt>
                        </div>
                    </div>
                    <div class="col" style="margin-left: -20px;">
                        <div class="row" style="margin-top: 30px; color: #004E64; font-size: 20px;">
                            <div class="fa fa-clock fa-stack-1x">
                                Opening time <label style="text-transform:lowercase"> - @Model.OpeningHour.ToString("hh:mm tt")</label>
                                <br /> Closing time <label style="text-transform:lowercase"> - @Model.ClosingHour.ToString("hh:mm tt")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-5" style="margin-top: -20px;">
            <div class="single category">
                <h3 class="side-title1" style="font-weight: bold:">EVENTS</h3>
                <h3 class="side-title">CALENDAR</h3>
                @if (Model.Events.Count() == 0)
                {
                    <h5 class="mt-4 text-imperial text-center">There are no events at the moment. </h5>
                }
                @foreach (var item in Model.Events)
                {
                    <div class="row">
                        <div class="col">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="@Url.Action("Details", "Events", new { id = item.Id } )" style="font-size: 18px;">
                                        <span style="float:left; margin-top: 5px;">
                                            <img src="~/Content/IT_sliki/bestParties.jpg" style="height: 30px; width: 50px;">
                                        </span>
                                        <span style="margin-left: 10px;">@item.Title</span>
                                        <span style="float: right;">@item.DateStart.ToString("MMM dd").ToUpper()</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                <p style="float: right;" class="seemore">
                    @if (User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                    }
                    else
                    {
                        <button class="btn btn-green mt-3">@Html.ActionLink("See more locals", "Index")</button>

                    }
                </p>
            </div>
            
        </div>
    </div>
</div> @*div container*@

<script>
    var numberStars = 0;

    function changeColor(element) {
        var id = parseInt(element.id[4]);

        for (var i = 0; i < id; i++) {
            var newId = "star" + (i + 1);
            document.getElementById(newId).style.color = "#f0ad4e";
        }
    }

    function changeBackColor() {

        for (var i = numberStars; i < 5; i++) {
            var newId = "star" + (i + 1);
            document.getElementById(newId).style.color = "darkgray";
        }

    }

    function rate(element) {
        var id = parseInt(element.id[4]);

        changeBackColor();
        for (var i = 0; i < id; i++) {
            var newId = "star" + (i + 1);
            document.getElementById(newId).style.color = "#f0ad4e";
        }

        numberStars = id;

        $.ajax({
            url: "@Url.Content("~/Locals/Rating")",
            type: 'POST',
            data: JSON.stringify({
                "Stars": numberStars
            }),
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                alert(data.success);
            },
            error: function () {
                alert("error");
            }
        });
    }
</script>



