@model IEnumerable<EventReservation.Models.Reservation>

@{
    ViewBag.Title = "ListReservations";
}
<style>
    .row {
        width:90%;
        margin: auto;
    }
    td {
        display: table-cell;
        vertical-align: middle !important;
    }

    select {
        margin-left: 5px;
        margin-right: 5px;
    }

    label {
        justify-content: flex-start !important;
        margin-left: 4%;
    }

    .col-sm-6:nth-child(2) label {
        margin-left: 52%;
    }
    .dataTables_wrapper .dataTables_paginate {
        float: right;
        text-align: right;
        padding-top: 0.25em;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            box-sizing: border-box;
            display: inline-block;
            min-width: 1.5em;
            padding: 0.5em 1em;
            margin-left: 2px;
            text-align: center;
            text-decoration: none !important;
            cursor: pointer;
            *cursor: hand;
            color: #333333 !important;
            border: 1px solid transparent;
        }


    div.dataTables_paginate {
        margin: 0;
        white-space: nowrap;
        text-align: right;
        float: left !important;
    }

        div.dataTables_paginate ul.pagination {
            margin: 2px 0;
            white-space: nowrap;
            align-self: center;
        }

    .dataTables_info {
        visibility: hidden;
    }

    .row:last-of-type {
        width: 100%;
    }

    .col-sm-7:last-of-type {
        padding: 0;
        margin-bottom: 10px;
    }

    .paginate_button {
        border: 1px solid darkgray !important;
        border-radius: 5px;
    }

        .paginate_button:hover {
            background-color: lightgray !important;
            cursor: pointer !important;
        }

    a {
        text-decoration: none !important;
    }

    #listReservationsId_wrapper {
        margin-bottom: 4%;
    }

</style>
<h4 class="text-green text-center display-4 font-header my-5">Reservations for @ViewBag.eventName</h4>

<table class="table table-striped container text-center" id="listReservationsId">
    <thead>
        <tr>
            <th>Reservation Name</th>
            <th>Reserved Tables</th>
            <th>User</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.NoTables</td>
                <td>@item.userEmail</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#listReservationsId").DataTable();
        });

    </script>
}