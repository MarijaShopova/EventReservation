@model EventReservation.Models.Event

@{
    ViewBag.Title = "Edit";
}
<link href="~/Css/edit.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="background-image: url('../../Content/bestParties.jpg'); opacity: 0.9;" class="div1">
