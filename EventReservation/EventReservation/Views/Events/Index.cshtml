@model IEnumerable<EventReservation.Models.Event>

@{
    ViewBag.Title = "Index";
}
<link href="~/Css/card-css.css" rel="stylesheet" />
<div class="bg-light">
    <div class="container py-5">
        <h1 class="text-imperial">Our Events</h1>
        <div class="form-group">
            @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })
        </div>

        @foreach (var item in Model)
        {
            <div class="row row-hover mt-4">
                <div class="col-lg-4 p-0">
                    <img src='@Url.Content("~/Content/alcohol-bar-beer.jpg")' class="img-responsive" />
                </div>
                <div class="col-lg-8 bg-imperial p-4">
                    <div class="row text-imperial">
                        <div class="col-lg-10">
                            <h3 class="font-weight-bold mb-2 text-mint">@item.Title</h3>
                            <div><span class="fa fa-calendar-alt mr-2 mt-2 text-mint"></span>@item.DateStart.ToString("MM/dd/yyyy") @@ @item.DateStart.ToString("hh:mm") pm - @item.DateEnd.ToString("hh:mm") pm</div>
                        </div>
                        <div class="col-lg-2">
                            <div class="calendar-date text-center bg-green calendar">@item.DateStart.Day</div>
                            <div class="calendar-month bg-imperial text-center calendar">@item.DateStart.ToString("MMM")</div>
                        </div>
                    </div>
                    <div><span class="fa fa-map text-mint mr-2 mt-2"></span>@item.local.Name, @item.local.StreetName, @item.local.StreetNo, @item.local.City, North Macedonia</div>
                    <div><span class="fa fa-music text-mint mr-2 mt-2"></span>@item.Genre</div>
                    <div>
                        <span class="fa fa-ticket-alt text-mint mr-2 mt-2"></span>
                        Entrance:
                        @if (item.Ticket)
                        {
                            <span>@item.TicketPrice ден.</span>
                        }
                        else
                        {
                            <span>Free</span>
                        }
                    </div>
                    <div>
                        <span class="fa fa-circle text-mint mr-2 mt-2"></span>
                        Hosted by
                        <a href="#" class="text-decoration-none text-mint">@item.local.Name</a>
                        <span class="fa fa-star text-warning"></span>
                        <span class="fa fa-star text-warning"></span>
                        <span class="fa fa-star text-warning"></span>
                        <span class="fa fa-star-half-alt text-warning"></span>
                        <span class="far fa-star text-warning"></span>
                    </div>
                    <button class="btn btn-green mt-3">Read More</button>
                </div>
            </div>
        }
    </div>
</div>
