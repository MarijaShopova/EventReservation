<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Css/mainPageCss.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    
</head>
<style>
    .meni {
        color: white;
      
    }
    .nav-link:hover {
       text-decoration:none;
       color:white;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg  static-top " id="meni">
        <div class="container ">
            <a class="navbar-brand " style="font-size: 22px; color:white;" href="#">
             LOGO   <span class="fa fa-cocktail text-white fa-2x"></span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto meni">
                    <li class="nav-item">
                      <a class="nav-link meni" href="~/Home/Index">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link meni" href="~/Events/Index">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link meni" href="~/Locals/Index">Locals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link meni" href="~/ContactUs/Index">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
